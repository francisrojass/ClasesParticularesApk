<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:cardCornerRadius="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Foto del profesor -->
        <ImageView
            android:id="@+id/profesor_foto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Foto del profesor"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/profesor_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Profesor"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/profesor_asignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asignatura"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/profesor_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/profesor_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio por hora"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/profesor_limite_alumnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limite de alumnos"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/profesor_valoracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ValoraciÃ³n"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
